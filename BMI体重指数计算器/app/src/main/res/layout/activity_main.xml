<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xintangai"
    >








    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="体重指数计算器"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/sg"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="身高"
        android:gravity="center"
        android:textSize="27sp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp "
        android:id="@+id/srh"
        android:layout_below="@+id/textView2"
        android:background="@drawable/sharp"
        android:hint="请输入身高"
        android:layout_toRightOf="@+id/sg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="cm"
        android:id="@+id/hdw"
        android:layout_toRightOf="@+id/srh"
        android:layout_below="@+id/textView2"
        android:textSize="30sp"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/tz"
        android:layout_below="@+id/sg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="体重"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp "
        android:id="@+id/srw"
        android:layout_below="@+id/sg"
        android:background="@drawable/sharp"
        android:hint="请输入体重"
        android:layout_toRightOf="@+id/tz"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="kg"
        android:id="@+id/wdw"
        android:layout_toRightOf="@+id/srw"
        android:layout_below="@+id/sg"
        android:textSize="30sp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/kong"
        android:layout_below="@+id/tz"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算BMI"
        android:textSize="40sp"
        android:layout_below="@+id/kong"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/btn"
        android:background="@drawable/sharp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/show"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_below="@+id/btn"
        android:paddingBottom="1dip"/>




</RelativeLayout>

